<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Userid:</b>
  <%= @post.userid %>
</p>

<p>
  <b>Longitude:</b>
  <%= @post.longitude %>
</p>

<p>
  <b>Latitude:</b>
  <%= @post.latitude %>
</p>

<p>
  <b>Img:</b>
  <%= @post.img %>
</p>

<p>
  <b>Region:</b>
  <%= @post.region %>
</p>

<h2>Post item information</h2>
<% @items.each do |item| %>
    <p>
      <b>Localized name:</b>
      <%= item['localized_name'] %>
      <br>
      <b>Localized description:</b>
      <%= item['localized_desc'] %>
    </p>
<% end %>

<h2>Add item information:</h2>

<%= form_for([@post, @post.post_items.build]) do |f| %>
    <div class="field">
      <%= f.label :item_info %><br />
      <%= f.select :item_info_id, @item_locs.map{ |i| [i.localized_name, i.item_info_id] } %>
    </div>
    <div class="field">
      <%= f.label :level %><br />
      <%= f.text_field :level %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

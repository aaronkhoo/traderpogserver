<h1>Listing users</h1>

<table>
  <tr>
    <th>Member</th>
    <th>Bucks</th>
    <th>Email</th>
    <th>SecretKey</th>
    <th>FbID</th>
    <th>Facebook Friends</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.member %></td>
    <td><%= user.bucks %></td>
    <td><%= user.email %></td>
    <td><%= user.secretkey %></td>
    <td><%= user.fbid %></td>
    <td><%= user.fb_friends %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

